<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Weekly Calendar"
            android:textColor="@color/black"
            android:textSize="30sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LinearLay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img1"
                        android:scaleType="fitStart"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img2"
                        android:scaleType="fitStart" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton4"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img3"
                        android:scaleType="fitStart"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton5"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img4"
                        android:scaleType="fitStart"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLay6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton6"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img5"
                        android:scaleType="fitStart"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLay7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton7"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img6"
                        android:scaleType="fitStart"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <ImageButton
                        android:id="@+id/ImgButton1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/img7"
                        android:scaleType="fitStart"/>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/frameLayFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>